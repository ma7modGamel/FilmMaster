<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailsScrollingActivity"
    tools:showIn="@layout/activity_details_scrolling">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:text="Name :"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/name_value_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:text="Date   :"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/date_value_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vote_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:text="Rate   :"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/vote_value_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/count_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:text="Votes :"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/count_value_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adult_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:text="Adult :"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/adult_value_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/genres_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:text="Genres :"
                        android:textColor="#fff"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/genres_value_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:textColor="#fff"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/movie_poster_iv"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:background="@drawable/imageview_border"
                    android:scaleType="fitXY" />
            </android.support.v7.widget.CardView>



        </LinearLayout>

        <TextView
            android:id="@+id/overview_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/imageview_border"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Overview"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/overview_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/cast_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/imageview_border"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Cast"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <ProgressBar
            android:id="@+id/cast_progressbar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/castLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/profile_image1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/imageview_border"
                        android:scaleType="fitXY"
                        tools:src="@mipmap/ic_unfavorite" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/character_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/profile_image2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/imageview_border"
                        android:scaleType="fitXY"
                        tools:src="@mipmap/ic_unfavorite" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/character_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/profile_image3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/imageview_border"
                        android:scaleType="fitXY"
                        tools:src="@mipmap/ic_unfavorite" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/character_name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/profile_image4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/imageview_border"
                        android:scaleType="fitXY"
                        tools:src="@mipmap/ic_unfavorite" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/character_name4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/profile_image5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/imageview_border"
                        android:scaleType="fitXY"
                        tools:src="@mipmap/ic_unfavorite" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/character_name5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    tools:text="Hello" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/videos_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/imageview_border"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Trailers"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></org.apmem.tools.layouts.FlowLayout>

        <TextView
            android:id="@+id/reviews_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/imageview_border"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Reviews"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recviews_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>